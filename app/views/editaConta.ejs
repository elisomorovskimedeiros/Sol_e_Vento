        <div class="divGeradores form-group">   
            <fieldset>
                    <h3><strong>Editar gerador eólico:<span id="avisoErroEolico" value = <%=Usina.eolicoContem%></span></span></strong></h3> 
                <table class="table table-responsive table-striped table-hover">
                    
                    <tr><td>Giro máximo:</td><td><input type="number" id="giroMax" class="form-control" value = <%=Usina.eolicoGiro%>></td></tr>
                    <tr><td>Tensão máxima:</td><td><input type="number" id="tensaoMaxEolico" class="form-control" value = <%=Usina.eolicoTensaoMax%>></td></tr>
                    <tr><td>Número de polos:&nbsp;&nbsp;</td><td><input type="number" id="numPolos" class="form-control" value = <%=Usina.eolicoNumPolos%>></td></tr>
                    
                </table>
                <%if (Usina.eolicoContem){%>
                    <input type="button" id="edEolico" value = "Editar Gerador Eólico" onclick="editaEolico(this)"><br>
                    <input type="button" id="remEolico" value = "Remover Gerador Eólico" onclick="editaEolico(this)"><br>
                <%}else{%> 
                    <input type="button" id="adicionarEolico" value = "Adicionar Gerador Eólico" onclick="adEolico('avisoErroEolico')"><br>
                <%}%>
            </fieldset>
        </div>

        <div class="divGeradores form-group">
            <fieldset >
                <%if (Usina.solarContem){%>
                    <h3><strong>Remover gerador solar:<span id="avisoErroSolar"></span></strong></h3> 
                    <h4>Sua usina não tem mais um painel solar?</h4>  
                    <p id="campoAvisoSolar" value = <%=Usina.solarContem%>></p>                 
                    <input type="button" id="removerSolar" value = "Remover Painel Solar" onclick="remSolar()"><br>
                <%}else{%>   
                    <h3><strong>Adicionar gerador solar:<span id="avisoErroSolar"></span></strong></h3> 
                    <h4>Sua usina terá um painel solar?</h4>  
                    <p id="campoAvisoSolar" value = <%=Usina.solarContem%>></p>  
                    <input type="button" id="adicionarSolar" value = "Adicionar Painel Solar" onclick="adSolar('avisoErroSolar')"><br>                
                <%}%>
            </fieldset>
        </div>

        <div class="divGeradores form-group">
            <fieldset>
                <table class="table table-responsive table-striped table-hover">
                    
                    <h3><strong>Editar banco de baterias:<span id="avisoErroBaterias" value = <%=Usina.bateriasContem%>></span></strong></h3>
                    <tr><td>Capacidade do banco: </td><td><input type="number" id="cap" class="form-control" value = <%=Usina.bateriasCapacidade%>></td></tr>
                    <tr><td>Tensão mínima: </td><td><input type="number" id="tensaoMinBaterias" class="form-control" value = <%=Usina.bateriasTensaoMin%>></td></tr>
                    <tr><td>Tensão máxima:&nbsp;&nbsp; </td><td><input type="number" id="tensaoMaxBaterias" class="form-control" value = <%=Usina.bateriasTensaoMax%>></td></tr>
                </table>
                <%if (Usina.bateriasContem){%>
                    <input type="button" id="edBaterias" value = "Editar Banco de Baterias" onclick="editaBaterias(this)"><br>
                    <input type="button" id="remBaterias" value = "Remover Banco de Baterias" onclick="editaBaterias(this)"><br>
                <%}else{%>
                    <input type="button" id="adicionarBaterias" value = "Adicionar Banco de Baterias" onclick="adBaterias('avisoErroBaterias')"><br>
                <%}%>
            </fieldset>
        </div>

      
        <div class="divGeradores form-group">
                <%if (Usina.carga1Contem){%>
                    <div class="divCadastro form-group">
                            <fieldset >
                                <h3><strong>Editar circuito consumidor 1:<span id="campoErroCarga1" value = <%=Usina.carga1Contem%>></span></strong></h3>                     
                                Qual o nome do circuito? (ex.: Sala) </td><td><input type="text" id="carga1Nome"  class="form-control" value = <%=Usina.carga1Nome%>><br> 
                                <input type="button" id="edCarga1" value = "Editar a primeira carga" onclick="editaCarga1(this)"><br>
                                <input type="button" id="remCarga1" value = "Remover a primeira carga" onclick="editaCarga1(this)"><br>
                            </fieldset>
                    </div>
                <%}else{%>
                    <div class="divCadastro form-group">
                            <fieldset >
                                <h3><strong>Adicionar circuito consumidor 1:<span id="campoErroCarga1" value = <%=Usina.carga1Contem%>></span></strong></h3>                     
                                <tr><td>Qual o nome do circuito? (ex.: Sala) </td><td><input type="text" id="carga1Nome"  class="form-control" value = <%=Usina.carga1Nome%>></td></tr>    
                                <input type="button" id="adcarga1" value = "Adicionar a primeira carga" onclick="adCarga1('avisoErroCarga1')"><br>
                            </fieldset>
                    </div>
                <%}%>
                
        </div>

        <div class="divGeradores form-group">
                <%if (Usina.carga2Contem){%>
                    <div class="divCadastro form-group">
                            <fieldset >
                                <h3><strong>Editar circuito consumidor 2:<span id="avisoErroCarga2" value = <%=Usina.carga2Contem%>></span></strong></h3>                     
                                Qual o nome do circuito? (ex.: Cozinha) </td><td><input type="text" id="carga2Nome" class="form-control" value = <%=Usina.carga2Nome%>><br> 
                                <input type="button" id="edCarga2" value = "Editar a segunda carga" onclick="editaCarga2(this)"><br>
                                <input type="button" id="remCarga2" value = "Remover a segunda carga" onclick="editaCarga2(this)"><br>
                            </fieldset>
                    </div>
                <%}else{%>
                    <div class="divCadastro form-group">
                            <fieldset >
                                <h3><strong>Adicionar circuito consumidor 2:<span id="avisoErroCarga2" value = <%=Usina.carga2Contem%>></span></strong></h3>                     
                                <tr><td>Qual o nome do circuito? (ex.: Cozinha) </td><td><input type="text" id="carga2Nome" class="form-control"  value = <%=Usina.carga2Nome%>></td></tr>    
                                <input type="button" id="adcarga2" value = "Adicionar a segunda carga" onclick="adCarga2('avisoErroCarga2')"><br>
                            </fieldset>
                    </div>
                <%}%>
                
        </div>
        
            <input type="button" id="botaoEdita" value = "Finalizar Edição" onclick="edicaoUsina()" class="col-xs-6"><br>
        
        <div id="campoErroSubmit"></div>
    </form>
        
  
    </div>
 

</div>


